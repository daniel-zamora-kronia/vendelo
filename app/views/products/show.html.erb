<div>
  <%= image_tag @product.photo, width: 300 if @product.photo.attached? %>
</div>

<h1 class="title"><%= @product.title %></h1>

<p class="description">Description: <%= @product.description %></p>
<p class="price">Price: <%= number_to_currency(@product.price) %></p>

<div>
  <%= link_to t(".edit"), edit_product_path(@product) %> |
  <%= link_to t(".delete"), product_path(@product), data: { turbo_method: :delete, turbo_confirm: t("common.confirm") } %>
</div>
